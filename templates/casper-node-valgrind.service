[Unit]
Description=Casper Node Launcher
Documentation=https://docs.casperlabs.io
After=network-online.target

[Service]
Type=simple
Environment="CL_MEM_DUMP_THRESHOLD_MB=6000"
ExecStart=/bin/sh -c 'exec /usr/bin/valgrind /usr/bin/casper-node validator /etc/casper/1_0_0/config.toml 2>&1 /var/log/casper-node.log'
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=casper-node-launcher
User=root
Group=root

[Install]
WantedBy=multi-user.target
